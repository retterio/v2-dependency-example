{
    "compilerOptions": {
        "lib": ["ES2015", "dom"],
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "ts-utils": ["dependencies/ts-utils"],
            "ts-utils*": ["dependencies/ts-utils/*"],
        }
    },
    "exclude": [
        "**/node_modules/**",
        "**/dist/**"
    ]
}